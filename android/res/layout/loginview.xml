<EditText
android:layout_marginTop="4.0dip"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:hint="@string/acount"
android:id="@+id/txtEmail" android:text="sureone@gmail.com">
</EditText>
<EditText
android:layout_marginTop="2.0dip"
android:hint="@string/password"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_below="@+id/txtEmail"
android:id="@+id/txtPassword" android:text="111111" android:password="true">
</EditText>
<Button android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignParentLeft="true"
android:layout_below="@+id/txtPassword"
android:id="@+id/BtnLogin" android:text="@string/login" android:bufferType="spannable"/>
    <LinearLayout android:layout_below="@+id/txtPassword" android:layout_alignParentRight="true"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
            >
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register" android:id="@+id/BtnRegister">
        </Button>

    </LinearLayout>


<TextView android:id="@+id/txtDesc"
android:layout_width="wrap_content"
android:layout_marginTop="4dip"
android:paddingLeft="1dip"
android:layout_height="wrap_content"
android:layout_below="@+id/BtnLogin"
android:text="@string/loginDesc"
android:textColor="#000000"/>
</RelativeLayout>

</RelativeLayout>

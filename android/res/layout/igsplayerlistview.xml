<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:paddingLeft="5dip" 
android:paddingRight="5dip" 
android:background="@drawable/backrepeat"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<ListView android:id="@+id/gameList"
android:layout_alignParentTop="true"
android:layout_width="fill_parent" 
android:layout_height="wrap_content"
android:background="@null"
android:layout_above="@+id/postArea"
>
</ListView>  
		  <TableLayout
		    xmlns:android="http://schemas.android.com/apk/res/android"
		      android:stretchColumns="*"
		android:layout_alignParentBottom="true"
		        android:layout_width="wrap_content"
			  android:layout_height="wrap_content">
			  <TableRow  android:layout_width="fill_parent">
			      <FrameLayout
			      android:layout_weight="1"
		              android:layout_height="wrap_content">
		              <Button
        			android:id="@+id/btnRank1"
        			android:text="@string/rank1"
		        	android:layout_width="fill_parent"
	                  	android:layout_height="wrap_content"
		              android:layout_gravity="center"/>
			       </FrameLayout>
			      <FrameLayout
			      android:layout_weight="1"
		              android:layout_height="wrap_content">
		              <Button
				android:id="@+id/btnRank2"
        			android:text="@string/rank2"
		        	android:layout_width="fill_parent"
	                  	android:layout_height="wrap_content"
		              android:layout_gravity="center"/>
			       </FrameLayout>
			      <FrameLayout
			      android:layout_weight="1"
		              android:layout_height="wrap_content">
		              <Button
				android:id="@+id/btnRank3"
        			android:text="@string/rank3"
		        	android:layout_width="fill_parent"
	                  	android:layout_height="wrap_content"
		              android:layout_gravity="center"/>
			       </FrameLayout>
			      <FrameLayout
			      android:layout_weight="1"
		              android:layout_height="wrap_content">
		              <Button
				android:id="@+id/btnRank4"
        			android:text="@string/autopair"
		        	android:layout_width="fill_parent"
	                  	android:layout_height="wrap_content"
		              android:layout_gravity="center"/>
			       </FrameLayout>
			       </TableRow>
		</TableLayout>
</RelativeLayout>


